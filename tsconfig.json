  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
}